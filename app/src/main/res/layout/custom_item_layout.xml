<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:background="@drawable/item_ripple"
    android:clickable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/custom_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_item_title"
            style="@style/itemtextstytle"
            android:text="昵称:"
            />

        <TextView
            android:id="@+id/custom_item_content"
            style="@style/itemtextstytle"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/custom_item_title"
            android:text="宝宝"
            />

        <ImageView
            android:id="@+id/custom_item_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_selector" />
        <com.ext.dusty.widget.CircleImageView
            android:id="@+id/custom_item_circleimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/custom_item_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_pressed"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/custom_item_righttext"
            style="@style/itemtextstytle"
            android:layout_toLeftOf="@+id/custom_item_arrow"
            android:layout_marginRight="10dp"
            android:text="宝宝"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/custom_item_xian"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/xian" />


</LinearLayout>
