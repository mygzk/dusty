<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ext.dusty.activity.CustomItemLayoutActivity"
    android:orientation="vertical">


    <com.ext.dusty.widget.CustomItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:customtitle="昵称:"
        custom:customContent="宝宝"
        custom:customRightCircle="@mipmap/ic_launcher"
        custom:customRightText="2015-12-08"
        custom:customIsImg="true"
        />
    <com.ext.dusty.widget.CustomItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:customtitle="生日:"
        custom:customContent="2015-12-08"
        custom:customRightCircle="@mipmap/ic_launcher"
        custom:customRightText="2015-12-08"
        custom:customIsImg="false"
        />
 <com.ext.dusty.widget.CustomItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:customtitle="性别:"
        custom:customContent="男"
        custom:customRightCircle="@mipmap/ic_launcher"
        custom:customIsImg="false"
        />

</LinearLayout>
